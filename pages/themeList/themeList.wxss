/* pages/themeList/themeList.wxss */
@import "../../template/postList.wxss";
.top-image {
  position: relative;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
  width: 100%;
  height: 500rpx;
}
.top-image .theme-desc {
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 100rpx 100rpx;
  color: #eeeeee;
  background: rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  text-align: center;
}

.middle-info{
  padding: 20rpx;
  color: #bbbbbb;
}
.middle-info .editor-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  vertical-align: middle;
  margin: 0 10rpx;
}
.theme-content {
  display: flex;
  align-items: center;
  flex-direction: column;
}
