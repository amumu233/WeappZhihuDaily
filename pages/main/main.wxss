/**index.wxss**/
@import "../../template/postList.wxss";
.swiper{
  width: 750rpx;
  height: 500rpx;
  position: absolute;
}
.swiper-item {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}
.swiper-title{
  box-sizing: border-box;
  position: absolute;
  width: 100%;
   background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.3) 70%, rgba(0, 0, 0, 0) 100%); 
  z-index: 2;
  bottom: 0;
  padding: 30rpx;
  padding-bottom: 60rpx;
  color: #fff;
  text-align: center;
}
.index-tip{
  text-align: left;
  padding: 20rpx;
  align-self: flex-start;
}
.scroll-view {
  margin-top: 500rpx;
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.refesh {
  padding: 30rpx 0;
}
